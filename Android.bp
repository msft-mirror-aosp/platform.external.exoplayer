android_library {
    name: "exoplayer2-core",
    manifest: "library/core/src/main/AndroidManifest.xml",
    srcs: ["library/core/src/main/java/**/*.java"],
    sdk_version: "current",
    static_libs: [
        "exoplayer2-core-annotation-stubs",
        "androidx.annotation_annotation",
    ],
    jarjar_rules: "exoplayer2-core-jarjar-rules.txt",
    visibility: ["//frameworks/base"],
}

// Compile dummy implementations of annotations used by exoplayer but not
// present in the Android tree.
java_library {
    name: "exoplayer2-core-annotation-stubs",
    host_supported: true,
    sdk_version: "core_current",
    srcs: ["annotation-stubs/src/**/*.java"],
    visibility: ["//visibility:private"],
}
